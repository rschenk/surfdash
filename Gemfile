source 'http://rubygems.org/'

# Tiny web framework
gem 'sinatra'

# Extra stuffs
gem 'sinatra-contrib'

# HTML parser
gem 'nokogiri'

# Natural language date parser
gem 'chronic'

group :test do
  # test framework
  gem 'rack-test'
  gem 'rspec'
  gem 'rspec-its'

  # for mocking out http requests
  gem 'vcr'
  gem 'webmock'
end
